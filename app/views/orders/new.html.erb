<div class="container mt-5">
  <h2>Paiement de la commande</h2>

  <%= form_tag orders_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">
        <span>Prix: <%= @cart.total_price %> </span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button btn-success"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Paiement du panier"
            data-label="Proc√©der au paiement"
            data-amount=<%= @cart.total_price * 100 %>
            data-currency="eur"
            data-locale="auto"></script>
  <% end %>
</div>