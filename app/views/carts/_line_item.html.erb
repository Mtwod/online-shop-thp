<% item = line_item.item %>

<div class="row border-bottom border-gray">
  <div class="col-5">
    <div class="media pt-3">
      <%= image_tag item.image_url, class: "mr-2 m-auto p-1", style: "width: 4vw; height: 4vw; object-fit: cover; border-radius: 10px", alt: "cat picture" %>
      <%# <img src="https://images.pexels.com/photos/1103832/pexels-photo-1103832.jpeg?cs=srgb&dl=pexels-oliver-sj%C3%B6str%C3%B6m-1103832.jpg&fm=jpg" alt="" class="mr-2 rounded m-auto mr-2" style="width: 4vw; height: 4vw; object-fit: cover;"> %>
      <p class="media-body pb-3 mb-0 small lh-125">
        <strong class="d-block text-gray-dark"><%= item.title %></strong>
      </p>
    </div>
  </div>
  <div class="col-7">
    <div class="row">
      <div class="col-2 small text-center">
        Prix à l'unité
      </div>
      <div class="col-2 small text-center">
        Qté
      </div>
      <div class="col-2 small">
        Prix total
      </div>
      <div class="col-6 small">
        Actions
      </div>
    </div>

    <div class="row">
      <div class="col-2 text-center">
        <%= item.price %>
      </div>
      <div class="col-2 text-center">
        <%= line_item.quantity %>
      </div>
      <div class="col-2">
        <%= line_item.total %>
      </div>
      <div class="col-6">
        <%= link_to root_path, class: "text-danger p-2" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>