<div class="container pt-3">

  <div class="row">
    <div class="col-8">
      <div class="rounded box-shadow">
        <h5 class="border-bottom border-gray pb-2 mb-0">Mon panier</h6>
        <%if @cart.line_items.count > 0%>
          <%= render partial: 'line_item', collection: @cart.line_items %>
        <% else %>
          <p class="pt-3">Votre panier est vide</p>
        <%end %>
      </div>
    </div>
    <div class="col-4">
      <h5 class="border-bottom border-gray pb-2 mb-0">Finaliser ma commande</h6>
      <p class="pt-3">Total TTC de ma commande : <%= @cart.total_price%> €</p>
      <% if @cart.line_items.count > 0 %>
        <%= link_to "Vider mon panier", @cart, class: "btn btn-outline-danger", method: "put", data: { confirm: "Êtes-vous sûr(e) ?"} %>
        <%= link_to "Passer ma commande", root_path, class: "btn btn-success" %>
      <% end %>
      <p class="mt-2"><%= link_to "Continuer mes achats", root_path, class: "btn btn-outline-primary" %></p>
    </div>
  </div>

  

</div>