<div class="container pt-3">

  <div class="row">
    <div class="col-8">
      <div class="rounded box-shadow">
        <h5 class="border-bottom border-gray pb-2 mb-0 mr-2" id="your-cart">Mon panier</h5>
        <%if @cart.line_items.count > 0%>
          <div class="row border-bottom border-gray py-2 mb-2 mr-2" id="column-titles">
            <div class="col-3"></div>
            <div class="col-9">
              <div class="row">
                <div class="col-3"></div>
                <div class="col-3 small text-center">
                  Prix à l'unité
                </div>
                <div class="col-1 small text-center">
                  Qté
                </div>
                <div class="col-3 small text-center">
                  Prix total
                </div>
                <div class="col-2 small text-center">
                  Actions
                </div>
              </div>
            </div>
          </div>
          <%= render partial: 'line_item', collection: @cart.line_items %>
        <% else %>
          <p class="pt-3">Votre panier est vide</p>
        <%end %>
      </div>
    </div>
    <div class="col-4">
      <h5 class="border-bottom border-gray pb-2 mb-0">Finaliser ma commande</h6>
      <p class="pt-3">Total TTC de ma commande : <span id="order-price"> <%= @cart.total_price%> </span> €</p>
      <% if @cart.line_items.count > 0 %>
        <%= link_to "Vider mon panier", @cart, class: "btn btn-outline-danger", id: "empty-cart", method: "put", data: { confirm: "Êtes-vous sûr(e) ?"} %>
        <%= link_to "Passer ma commande", new_order_path(@cart.id), class: "btn btn-success", id: "order-cart" %>
      <% end %>
      <p class="mt-2"><%= link_to "Continuer mes achats", root_path, class: "btn btn-outline-primary" %></p>
    </div>
  </div>

  

</div>