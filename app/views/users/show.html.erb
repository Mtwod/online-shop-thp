<div class="container">
  <h2 class="my-5 text-center">Mon profil</h2>

  <h4>Mon nom</h4>
  <p><%= current_user.first_name %></p>
  <hr>

  <h4>Mon prénom</h4>
  <p><%= current_user.last_name %></p>
  <hr>

  <h4>Mon email</h4>
  <p><%= current_user.email %></p>
  <hr>

  <h4>Mes commandes</h4>
  
  <% if @user_orders.count > 0%>
    <div class="bg-white rounded box-shadow">
      <div class="row border-bottom border-gray py-2 mb-2 mr-2">
        <div class="col-3">
          Date de la commande
        </div>
        <div class="col-3 small text-center">
          Nombre d'articles
        </div>
        <div class="col-3 small text-center">
          Prix total
        </div>
        <div class="col-3 small text-center">
          Actions
        </div>
      </div>
      <% render partial: 'order', collection: @orders %>
    <div>
  <% else %>
    <p>Tu n'as encore passé aucune commande</p>
    <hr>
  <% end %>

  <br/><br/>

  <div class="text-center">
    <%= link_to "Editer email et mot de passe", edit_user_registration_path, class: "btn btn-outline-primary" %>
    <%= link_to "Éditer mon profil", edit_user_path(current_user), class: "btn btn-outline-primary" %><br/>
    <br>
    <%= link_to  "Page d'accueil", root_path, class: "btn btn-info" %>
  </div>


  <br/><br/>

</div>